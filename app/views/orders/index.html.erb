<!-- Main container -->
<nav class="level">
  <!-- Left side -->
  <div class="level-left">
    <div class="level-item">
      <p class="subtitle is-2">
        訂單列表
      </p>
    </div>
  </div>

  <!-- Right side -->
  <div class="level-right">
    <p class="level-item">
      <%= link_to new_order_path, class: 'button is-primary is-medium' do %>
        <span class="icon is-small">
          <i class="fas fa-plus"></i>
        </span>
        <span>新增訂單</span>
      <% end %>
    </p>
  </div>
</nav>

<table class="table is-fullwidth">
  <thead>
    <tr>
      <th scope="col" class="is-size-5">訂單編號</th>
      <th scope="col" class="is-size-5">日期</th>
      <th scope="col" class="is-size-5">客戶</th>
      <th scope="col" class="is-size-5">狀態</th>
      <th scope="col" class="is-size-5">應收帳款</th>
      <th scope="col" class="is-size-5">實收帳款</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td class="is-size-5"><%= order.number %></td>
        <td class="is-size-5"><%= order.delivered_at %></td>
        <td class="is-size-5"><%= order.customer.name %></td>
        <td class="is-size-5"><%= order.aasm_state %></td>
        <td class="is-size-5"><%= order.receivable %></td>
        <td class="is-size-5"><%= order.paid %></td>
        <td>
          <%= link_to edit_order_path(order), class: 'button is-info' do %>
            <span class="icon is-small">
              <i class="fas fa-edit"></i>
            </span>
            <span class="is-size-6">編輯</span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
